Screen:
    name: 'loading_screen'
    MDGridLayout:
        canvas.before:
            PushMatrix
            Rotate:
                angle: self.angle
                origin: self.center
        canvas.after:
            PopMatrix
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        GridLayout:
            id: loading
            angle: 0
            rows: 2
            cols: 2
            size_hint: None, None
            height: 60
            width: 68
            pos_hint: {"center_x": .5, "center_y": .5}
            spacing: 5
            MDFloatLayout:
                md_bg_color: rgba(242, 80, 34,255)
            MDFloatLayout:
                md_bg_color: rgba(127, 186, 0, 255)
            MDFloatLayout:
                md_bg_color: rgba(0, 164, 239, 255)
            MDFloatLayout:
                md_bg_color: rgba(255, 185, 0, 255)